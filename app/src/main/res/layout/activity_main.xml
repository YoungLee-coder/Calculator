<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9edf0"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--
        上方显示区域，占 2 份高度
        你可根据需要把 layout_weight 改为 1，或把下方改大一些
    -->

    <!--
        下方按键区域，占 3 份高度
        match_parent 宽度，以便网格铺满横向
    -->
    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        android:layout_weight="1.5"
        android:background="#e9edf0"
        android:fontFamily="@font/hmosregular"
        android:gravity="bottom|end"
        android:hint="0"
        android:paddingTop="16dp"
        android:paddingRight="25dp"
        android:paddingBottom="16dp"
        android:textSize="80dp"
        android:textStyle="bold" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:alignmentMode="alignMargins"
        android:background="@drawable/rounded_top_corners"
        android:columnCount="4"
        android:rowCount="6"
        android:useDefaultMargins="true">


        <Button
            android:id="@+id/btn_c"
            style="@style/btn_fun_styles"
            android:text="c" />

        <Button
            android:id="@+id/btn_chu"
            style="@style/btn_fun_styles"
            android:text="÷" />

        <Button
            android:id="@+id/btn_cheng"
            style="@style/btn_fun_styles"
            android:text="×" />

        <Button
            android:id="@+id/btn_del"
            style="@style/btn_fun_styles"
            android:text="⌫" />

        <Button
            android:id="@+id/btn_7"
            style="@style/btn_num_styles"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/btn_num_styles"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/btn_num_styles"
            android:text="9" />

        <Button
            android:id="@+id/btn_jian"
            style="@style/btn_fun_styles"
            android:text="-" />

        <Button
            android:id="@+id/btn_4"
            style="@style/btn_num_styles"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/btn_num_styles"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/btn_num_styles"
            android:text="6" />

        <Button
            android:id="@+id/btn_jia"
            style="@style/btn_fun_styles"
            android:text="+" />

        <Button
            android:id="@+id/btn_1"
            style="@style/btn_num_styles"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/btn_num_styles"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/btn_num_styles"
            android:text="3" />

        <Button
            android:id="@+id/btn_deng"
            style="@style/btn_equal_styles"
            android:layout_width="wrap_content"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:text="=" />

        <Button
            android:id="@+id/btn_baifen"
            style="@style/btn_num_styles"
            android:text="%" />

        <Button
            android:id="@+id/btn_0"
            style="@style/btn_num_styles"
            android:text="0" />

        <Button
            android:id="@+id/btn_dot"
            style="@style/btn_num_styles"
            android:text="." />

    </GridLayout>

</LinearLayout>
